<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.kochka.android.weightlogger"
      android:versionCode="15"
      android:versionName="1.0.6">
      
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="16" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@style/Theme.WeightLogger">
        <activity android:name=".WeightLoggerActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowMeasurementActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".EditMeasurementActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".GraphActivity"
            android:label="@string/app_name">
        </activity>
        <activity 
            android:name=".EditPreferences"
            android:label="@string/app_name">
        </activity>
    </application>
</manifest>