<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- Theme -->
  <style name="Theme.WeightLogger" parent="@style/Theme.ActionBar">
    <item name="android:windowBackground">@drawable/gradient_background</item>
    <item name="android:listViewStyle">@style/CommonList</item>
  </style>
  
  <!-- Common -->
  <style name="WrapWrap">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>  

  <style name="FillWrap">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>  

  <style name="WrapFill">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">fill_parent</item>
  </style>  

  <style name="FillFill">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
  </style>  

  <style name="CommonList">
    <!-- <item name="android:listSelector">@drawable/list_selector</item> -->
    <item name="android:cacheColorHint">@android:color/transparent</item>
  </style>  
  
  <!-- List view -->
  <style name="List" parent="FillFill">
    <item name="android:listSelector">@drawable/list_selector</item>
    <item name="android:scrollbars">vertical</item>
    <item name="android:fadingEdge">vertical</item>
    <item name="android:fastScrollEnabled">true</item>
  </style>
  <style name="ListMeasurement" parent="FillWrap">
    <item name="android:orientation">vertical</item>
    <item name="android:paddingTop">5dip</item>
    <item name="android:paddingBottom">5dip</item>
    <item name="android:paddingLeft">10dip</item>
    <item name="android:paddingRight">10dip</item>
  </style>
  <style name="ListMeasurementDay" parent="FillWrap">
    <item name="android:textStyle">italic</item>
    <item name="android:textSize">15dip</item>
    <item name="android:textColor">#00abbc</item>
  </style>
  <style name="ListMeasurementDate" parent="WrapWrap">
		<item name="android:textStyle">bold</item> 
		<item name="android:textSize">18dip</item>
		<item name="android:textColor">#FFFFFF</item>
  </style>
  <style name="ListMeasurementWeight" parent="FillWrap">
    <item name="android:gravity">right</item> 
    <item name="android:textStyle">bold</item> 
    <item name="android:textSize">18dip</item> 
    <item name="android:textColor">#FFFFFF</item> 
  </style>
  
  <!-- Show view -->
  <style name="Show" parent="FillFill">
  </style>
  <style name="ShowTableRow" parent="WrapFill">
    <item name="android:layout_weight">1</item>
  </style>
  <style name="ShowTableCell" parent="WrapFill">
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:layout_marginLeft">8dip</item>
    <item name="android:layout_marginRight">8dip</item>
  </style>
  <style name="ShowDateCommon" parent="FillWrap">
    <item name="android:textColor">#00abbc</item>
    <item name="android:gravity">center</item>
  </style>
  <style name="ShowDay" parent="ShowDateCommon">
    <item name="android:textSize">20dip</item>
  </style>
  <style name="ShowDayLand" parent="ShowDay">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_marginRight">8dip</item>
    <item name="android:textSize">25dip</item>
    <item name="android:textStyle">bold</item>
  </style>   
  <style name="ShowDate" parent="ShowDateCommon">
    <item name="android:textSize">25dip</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="ShowDateLand" parent="ShowDate">
    <item name="android:layout_width">wrap_content</item>
  </style>
  <style name="ShowTime" parent="ShowDateCommon">
    <item name="android:textSize">16dip</item>
  </style>
  <style name="ShowTimeLand" parent="ShowTime">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_marginLeft">15dip</item>
  </style> 
  <style name="ShowIcon" parent="WrapFill">
    <item name="android:scaleType">center</item>
  </style>
  <style name="ShowText" parent="WrapWrap">
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingLeft">10dip</item>
    <item name="android:textSize">20dip</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#FFFFFF</item>
  </style>
  <style name="ShowTextInfo" parent="WrapWrap">
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingLeft">10dip</item>
    <item name="android:textColor">#00abbc</item>
  </style>
  
  <!-- Edit view -->
  <style name="Edit" parent="FillWrap">
  </style>
	<style name="EditTableRow">
    <item name="android:padding">8dip</item>
	</style>
  <style name="EditTableRowIcon">
    <item name="android:layout_width">55dip</item>
  </style>
  <style name="EditTableRowText">
    <item name="android:paddingLeft">5dip</item>
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:layout_weight">1</item>
  </style>
  <style name="EditTableRowDate" parent="FillWrap">
    <item name="android:gravity">center</item>
    <item name="android:textSize">20dip</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#00abbc</item>
  </style>
  <style name="EditTableRowTime" parent="FillWrap">
    <item name="android:gravity">center</item>
    <item name="android:textColor">#00abbc</item>
  </style>   
  <style name="EditTableRowEditText">
    <item name="android:layout_width">80dip</item>
  </style>
  
</resources>